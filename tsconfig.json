{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "rootDir": "./",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@client/*": ["./client/*"],
      "@db/*": ["./db/*"],
      "@server/*": ["./server/*"]
    }
  }
}
